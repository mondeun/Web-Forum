@model List<Web_Forum.Models.IndexThreadViewModel>
@{ 
    var options = new AjaxOptions
    {
        HttpMethod = "Get",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "createThread"
    };
}

<div class="container">
    @*<h1 class="text-center">@ViewBag.Title</h1>*@

    <div class="jumbotron">


        <h3 class="text-center">Join the EC Utbilding Community</h3>
        <div class="text-center">
            Join and share your knowledge through your school portal.
            Make your connections and share your ideas.
            Be welcome by once joined.<br />
            <br />
            <button class="btn btn-primary">Join In</button>
        </div>

    </div>
    <!---->

    <div>
        @Ajax.ActionLink("New Thread", "AddThread", options)
        <button id="newTopic" type="button" class="btn-primary">New Topic</button>
        <h3>Sub-Forums</h3>
        
        <div id="threadList">
            <ul>
                @{
                    //To discuss with the boss if a PartialView is a better and cleaner solution/ We could call for each Partial with
                    foreach (var thread in Model)
                    {
                        @*<h3>@subforum.Title</h3>*@
                        <li class="form-control alert-success">
                            @Html.ActionLink(thread.Title, "Index", "Thread", new { id = thread.Id }, null)
                            <span><small>Posts</small> @thread.Posts.Count</span>
                            <span><small>Created</small> @thread.DateCreated</span>
                        </li>
                    }
                }
            </ul>
        </div>
        <div id="createThread"></div>


        
    </div>
    <!---->
    


    <div></div>
</div>


