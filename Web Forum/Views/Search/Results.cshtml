@model Web_Forum.Models.SearchViewModel

@{
    ViewBag.Title = "Results";
}

<h2>Results</h2>
<div>
    <h3>Threads</h3>
    @if (Model.Threads.Count > 0)
    {
        @Html.Partial("Threads", Model.Threads)
    }
    else
    {
        <h4>No threads where found.</h4>
    }
</div>
<div>
    <h3>Posts</h3>
    @if (Model.Posts.Count > 0)
    {
        @Html.Partial("Posts", Model.Posts)
    }
    else
    {
        <h4>No posts where found.</h4>
    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/search.js"></script>