@model List<Web_Forum.Models.PostViewModel>
@{
//ViewBag.Title = "Index";
}

@{
    var options = new AjaxOptions
    {
        HttpMethod = "Get",
        UpdateTargetId = "createPost",
        InsertionMode = InsertionMode.Replace
    };
}
<div class="row">
    <div class="col-lg-3 col-md-3"></div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <h2 class="text-center">@ViewBag.threadTitle</h2>
        <ul>
            <li class="list-group-item" id="postList">

                @Html.Partial("Posts", Model)

                <h3>@Ajax.ActionLink("Reply", "AddPost", new { id = Model.First().ThreadId }, options, new { @class = "btn btn-default" })</h3>
                @Ajax.ActionLink(" ", "AddLike", new { id = Model.First().ThreadId }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "changingLikesValue", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-success glyphicon glyphicon-ok-circle" })
                <span id="changingLikesValue"><b>Likes:</b>  @ViewBag.Likes</span>
            </li>
        </ul>
    </div>

    <div class="col-lg-3 col-md-3"></div>
</div>
<div class="row">
    <div class="col-md-4 col-sm-4 col-xs-4"></div>
    <div class="col-md-4 col-sm-4 col-xs-4"><div style="margin:0 auto 0 auto" id="createPost"></div></div>
    <div class="col-md-4 col-sm-4 col-xs-4">

    </div>

</div>
<div>

,    @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn btn-primary" })
</div>
